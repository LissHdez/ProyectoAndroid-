<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-48dp">

        <TextView
            android:id="@+id/tNombre"
            android:layout_width="410dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="TextView"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333" />

        <TextView
            android:id="@+id/tDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dip"
            android:layout_marginTop="80dip"
            android:fontFamily="@font/montserrat"
            android:text="TextView"
            android:textColor="#333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="120dp"
            android:fontFamily="@font/montserrat"
            android:text="TextView"
            android:textColor="#333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tHorario"
            android:layout_width="185dp"
            android:layout_height="43dp"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="160dp"
            android:fontFamily="@font/montserrat"
            android:text="TextView"
            android:textColor="#333"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/tImgR"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"
            app:srcCompat="@drawable/g836" />

        <ImageView
            android:id="@+id/cel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="118dp"
            app:srcCompat="@drawable/telef" />

        <ImageView
            android:id="@+id/reloj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="160dp"
            app:srcCompat="@drawable/reloj" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="123dp"
            android:layout_height="27dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="170dip"
            app:srcCompat="@drawable/g902" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/liiiineee"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="40dp"/>


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>